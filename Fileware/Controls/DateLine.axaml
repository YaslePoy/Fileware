<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Fileware.Controls.DateLine"
             x:DataType="system:DateTime">
    <Design.DataContext>
        <system:DateTime>2021-1-1</system:DateTime>
    </Design.DataContext>
    <Border Background="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" CornerRadius="20">
        <TextBlock Margin="20, 5" Text="{Binding StringFormat=D}" Foreground="White"></TextBlock>
    </Border>
</UserControl>