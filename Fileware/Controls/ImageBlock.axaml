<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Fileware.Models"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="300"
             Height="300"
             x:DataType="models:FileData" HorizontalContentAlignment="Stretch"
             x:Class="Fileware.Controls.ImageBlock" VerticalContentAlignment="Stretch" HorizontalAlignment="Left">
    <Design.DataContext>
        <models:FileData Name="FileData file name qwer.json" Size="410552" Version="13" />
    </Design.DataContext>
    <Border HorizontalAlignment="Left" ClipToBounds="True" Background="{StaticResource MainColor}" CornerRadius="15">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Переименовать" Click="OnRename"></MenuItem>
                <MenuItem Header="Удалить">
                    <MenuItem Background="OrangeRed" Header="Точно?" Click="OnDelete"></MenuItem>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Bottom" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10, 3"
                  ColumnDefinitions="* Auto" MaxWidth="{Binding #ViewImage.DesiredSize.Width}">

                <TextBlock Grid.Column="1" DockPanel.Dock="Right" Foreground="White"
                           Text="{Binding LastChange, StringFormat=t}"
                           ToolTip.Tip="{Binding LastChange, StringFormat=U}">
                </TextBlock>
                <SelectableTextBlock VerticalAlignment="Bottom" Foreground="White"
                                     FontSize="12" Margin="4, 2"
                                     Text="{Binding Name}" IsVisible="{Binding !LoadProgressEnable}"
                                     ToolTip.Tip="{Binding Name}">
                </SelectableTextBlock>
                <Panel HorizontalAlignment="Stretch" Grid.Column="1">
                    <TextBlock VerticalAlignment="Top" Foreground="White" FontSize="12" Margin="4, 2"
                               IsVisible="{Binding LoadProgressEnable}" Name="SpeedTB" HorizontalAlignment="Right" />
                </Panel>

                <ProgressBar Name="UploadBar" IsVisible="{Binding LoadProgressEnable}" Margin="0, 5"></ProgressBar>
            </Grid>
            <Image Source="{Binding Preview}" Name="ViewImage" DockPanel.Dock="Top" HorizontalAlignment="Left"
                   VerticalAlignment="Stretch">
            </Image>
        </DockPanel>
    </Border>
</UserControl>