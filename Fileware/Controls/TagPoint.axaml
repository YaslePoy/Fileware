<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Fileware.ViewModels"
             mc:Ignorable="d" d:DesignWidth="50" d:DesignHeight="50"
             Width="19" Height="19"
             x:Class="Fileware.Controls.TagPoint" x:DataType="viewModels:Tag">
    <Border HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip.Tip="{Binding Name}"
            Background="{Binding Color}" Width="8" Height="8" CornerRadius="10">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding ChangeColor}" Header="Изменить цвет тега"></MenuItem>
                <MenuItem Click="RemoveTag" Header="Убрать тег"></MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
    </Border>
</UserControl>